{
  "version": 2,
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    { "src": "/(favicon.ico|robots.txt|sitemap.xml)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "api/index.ts" }
  ]
}


