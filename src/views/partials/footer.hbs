{{#if showBlogs}}
<section class="bg-dark text-white py-5 d-flex justify-content-center">
    <div class="container px-lg-5 mx-lg-5 ">
        <h2 class="mn-hed text-center pb-4">
            OUR BLOG
        </h2>

        {{#if recentBlogPosts}}
            {{#each recentBlogPosts}}
                {{#if @first}}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="blg-1 pos-rel">
                                <img src="{{this.image}}" class="w-100" alt="{{this.alt}}">
                                <div class="abs-blog text-center">
                                    <a href="{{../baseUrl}}/blog/{{this.slug}}" class="text-decoration-none text-white">
                                        {{this.title}}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{else}}
                    {{#if (eq @index 1)}}
                        <div class="row mt-4">
                    {{/if}}
                    <div class="col-lg-6 pos-rel">
                        <img src="{{this.image}}" class="w-100 blg-2" alt="{{this.alt}}">
                        <div class="abs-blog">
                            <a href="{{../baseUrl}}/blog/{{this.slug}}" class="text-decoration-none text-white">
                                {{this.title}}
                            </a>
                        </div>
                    </div>
                    {{#if @last}}
                        </div>
                    {{/if}}
                {{/if}}
            {{/each}}
        {{/if}}

        <div class="text-center mt-5">
            <a class="cm-bt1 text-decoration-none text-white" href="{{baseUrl}}/blogs">
